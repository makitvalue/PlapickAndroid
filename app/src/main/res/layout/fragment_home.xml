<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:paddingBottom="80dp">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/sl_swipe_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="590dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/iv1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_default="percent"
                        app:layout_constraintHeight_percent="0.20"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.33"
                        android:adjustViewBounds="true"/>

                    <ImageView
                        android:id="@+id/iv_2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="1dp"
                        android:background="@drawable/iv2"
                        app:layout_constraintHeight_default="percent"
                        app:layout_constraintHeight_percent="0.20"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/iv_1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.33"
                        android:adjustViewBounds="true" />

                    <ImageView
                        android:id="@+id/iv_3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="1dp"
                        android:background="@drawable/iv3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHeight_default="percent"
                        app:layout_constraintHeight_percent="0.20"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/iv_2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.33"
                        android:adjustViewBounds="true" />

                    <ImageView
                        android:id="@+id/iv_4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/iv4"
                        app:layout_constraintHeight_default="percent"
                        app:layout_constraintHeight_percent="0.40"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_1"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.66"
                        android:adjustViewBounds="true" />

                    <ImageView
                        android:id="@+id/iv_5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/iv5"
                        app:layout_constraintHeight_default="percent"
                        app:layout_constraintHeight_percent="0.20"
                        app:layout_constraintStart_toEndOf="@+id/iv_4"
                        app:layout_constraintTop_toBottomOf="@+id/iv_3"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.33" />

                    <ImageView
                        android:id="@+id/iv_6"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/iv6"
                        app:layout_constraintHeight_default="percent"
                        app:layout_constraintHeight_percent="0.20"
                        app:layout_constraintStart_toEndOf="@+id/iv_4"
                        app:layout_constraintTop_toBottomOf="@+id/iv_5"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.33" />

                    <ImageView
                        android:id="@+id/iv_7"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/iv7"
                        app:layout_constraintHeight_default="percent"
                        app:layout_constraintHeight_percent="0.20"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_6"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.33" />

                    <ImageView
                        android:id="@+id/iv_8"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/iv9"
                        app:layout_constraintHeight_default="percent"
                        app:layout_constraintHeight_percent="0.20"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_7"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.33" />

                    <ImageView
                        android:id="@+id/iv_9"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/iv8"
                        app:layout_constraintHeight_default="percent"
                        app:layout_constraintHeight_percent="0.40"
                        app:layout_constraintStart_toEndOf="@+id/iv_8"
                        app:layout_constraintTop_toBottomOf="@+id/iv_6"
                        app:layout_constraintWidth_default="percent"
                        app:layout_constraintWidth_percent="0.66"
                        android:adjustViewBounds="true"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Hot Pick!"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

                <RelativeLayout
                    android:id="@+id/rl_hotpick_1"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/hotpick1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    android:adjustViewBounds="true">
                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/like_16dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4059"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="@color/white"
                            android:layout_marginLeft="4dp"/>

                        <ImageButton
                            android:layout_marginLeft="20dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/chat_32dp"
                            android:background="@null" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="675"
                            android:textSize="16sp"
                            android:textStyle="normal"
                            android:textColor="@color/white"
                            android:layout_marginLeft="4dp"/>


                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대전 엑스포 다리"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="28dp"
                        android:layout_marginBottom="20dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_hotpick_2"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="30dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/hotpick2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl_hotpick_1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@null"
                            android:src="@drawable/like_16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="4059"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <ImageButton
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="20dp"
                            android:background="@null"
                            android:src="@drawable/chat_32dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="675"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="normal" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="28dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="가오동 뒷산"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_hotpick_3"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="30dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/hotpick3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl_hotpick_2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@null"
                            android:src="@drawable/like_16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="4059"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <ImageButton
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="20dp"
                            android:background="@null"
                            android:src="@drawable/chat_32dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="675"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="normal" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="28dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="이응노 미술관"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                </RelativeLayout>





            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</androidx.constraintlayout.widget.ConstraintLayout>